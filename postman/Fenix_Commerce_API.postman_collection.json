            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"orgId\": \"{{tenantId}}\",\n  \"websiteId\": \"{{storeId}}\",\n  \"externalOrderId\": \"SHOPIFY-12345\",\n  \"externalOrderNumber\": \"ORD-2024-001\",\n  \"status\": \"CREATED\",\n  \"financialStatus\": \"PAID\",\n  \"fulfillmentStatus\": \"UNFULFILLED\",\n  \"customerEmail\": \"customer@example.com\",\n  \"orderTotal\": 129.99,\n  \"currency\": \"USD\"\n}"
