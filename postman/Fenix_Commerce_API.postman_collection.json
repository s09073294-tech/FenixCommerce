                },
                {
                  "key": "status",
                  "value": "CREATED",
                  "disabled": true
                },
                {
                  "key": "financialStatus",
                  "value": "PAID",
                  "disabled": true
                },
                {
                  "key": "page",
                  "value": "0"
                },
                {
                  "key": "size",
                  "value": "10"
                },
                {
                  "key": "sort",
                  "value": "orderUpdatedAt,desc"
                }
              ]
            }
          }
        },
